@{
    ViewData["Title"] = "Sign Up As Student";
}

@model Project.ViewModels.LoginViewModel
<div style="height: calc(100vh - 56px);" class="w-100 bg-dblue-lighter overflow-hidden d-flex">
    <div style="width: 70%" class="d-none d-xxl-block position-relative">
        <img id="signInStudentImage" class="img-fluid position-absolute bottom-0" src="~/images/SignUpPage_Boy.png"/>
    </div>

    <div class="w-100 bg-white signUpInputs p-5 d-flex justify-content-center align-items-center">

        <form asp-controller="Login" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row d-flex justify-content-around m-2">
                    <div class="col">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" placeholder="Enter your Email here" class="form-control bg-secondary"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row d-flex justify-content-around m-2">

                    <div class="col">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Enter your Password" class="form-control bg-secondary"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>



            <div class="d-flex justify-content-center align-content-center">
                <button class="btn bg-mustard text-white" type="submit">
                    <a>Login</a>
                </button>
            </div>

            <div class="d-flex justify-content-center align-content-center p-2">
                <p>
                    Don't have an account?
                    <span>
                        <a asp-controller="Home" asp-action="RegisterPage" class="text-decoration-none text-dblue-lighter fw-bold">
                            SignUp.
                        </a>
                    </span>
                </p>
            </div>
        </form>
    </div>
</div>